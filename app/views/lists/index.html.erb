<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://entrepreneurship.babson.edu/wp-content/uploads/2020/10/Movie-1200-630.jpg);">
  <div class="container">
    <h1 class="d-flex justify-content-center">All my categories!</h1>
    <p class="d-flex justify-content-center">What do you wanna watch?</p>
    <%# <a class="btn btn-flat" href="#">Apply now</a> %>
  </div>
</div>

<div class="cards p-3 mx-auto">
  <div class="container">
    <ul>
      <% @lists.each do |list| %>
        <% if list.image.attached? %>
          <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key, height: 300, crop: :fill %>')">
            <li class="list-unstyled"><%= link_to list.name, list_path(list), class: 'text-decoration-none text-white' %></li>
          </div>
          <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.macmillandictionary.com/us/external/slideshow/thumb/Grey_thumb.png)">
            <li class="list-unstyled"><%= link_to list.name, list_path(list), class: 'text-decoration-none' %></li>
          </div>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
