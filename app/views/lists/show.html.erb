<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8ZmlsbXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <h1><%= "My favourite #{@list.name} movies " %></strong>!</h1>
  </div>
</div>

<div>
  <ul>
    <% @list.movies.each do |movie|%>
    <li><%= movie.title %></li>
    <li><%= movie.overview %></li>
    <li><%= "Rating: #{movie.rating}" %></li>
    <% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
    <%= link_to 'Delete this bookmark', bookmark_path(bookmark),
        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </ul>
</div>

<div class="p-3">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%# <%= f.association :list %>
    <%= f.submit :submit, class: "btn btn primary" %>
  <% end %>
</div>
