<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8ZmlsbXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60);">
  <div class="container d-flex justify-content-center">
    <h1><%= "My favourite #{@list.name} movies " %></strong>!</h1>
  </div>
</div>


<div class="cards">
  <ul>
    <% @list.movies.each do |movie|%>
      <div class="card-trip m-3">
        <img src=<%= movie.poster_url %> />
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
          </div>
          <h2 class="card-trip-pricing"><%= "Rating: #{movie.rating}" %></h2>
          <h3><% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
          <%= link_to 'Delete', bookmark_path(bookmark),
          data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></h3>
        </div>
      </div>
    <% end %>
  </ul>
</div>



<div class="p-3">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit :submit, class: "btn btn-primary" %>
  <% end %>
</div>
