<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1518676590629-3dcbd9c5a5c9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80);">
  <div class="container d-flex justify-content-center">
    <h1>Add a new category</h1>
  </div>
</div>

<div class='p-3'>
  <%= simple_form_for (@list) do |f| %>
    <%= f.input :name %>
    <%= f.input :image, as: :file %>
    <%= f.submit 'Submit this new category', class: 'btn btn-primary' %>
  <% end %>
</div>
